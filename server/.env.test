# ========================================
# E2E 测试环境配置
# ========================================

# 运行环境
NODE_ENV=test

# PostgreSQL 连接（使用与开发环境相同的数据库）
DATABASE_URL="postgresql://postgres:123456@127.0.0.1:5432/nest-admin-soybean?schema=public"

# 应用配置
APP_PORT=8080
APP_PREFIX=/api

# 数据库细项
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=123456
DB_DATABASE=nest-admin-soybean
DB_SCHEMA=public
DB_SSL=false

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=123456
REDIS_DB=3
# 使用不同的 DB 避免与开发环境冲突

# JWT 配置
JWT_SECRET=test_secret_key
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=2h

# 文件上传
FILE_IS_LOCAL=true
FILE_UPLOAD_LOCATION=../upload/test
FILE_MAX_SIZE=100
FILE_DOMAIN=http://localhost:8080
FILE_SERVE_ROOT=/profile

# 缩略图配置
UPLOAD_THUMBNAIL_ENABLED=false
UPLOAD_THUMBNAIL_ENABLE_VIDEO=false

# 用户配置
USER_INITIAL_PASSWORD=123456

# 多租户配置
TENANT_ENABLED=true
TENANT_SUPER_ID=000000
TENANT_DEFAULT_ID=000000

# 加密配置（测试环境关闭以简化测试）
CRYPTO_ENABLED=false

# 客户端配置
CLIENT_DEFAULT_ID=pc
CLIENT_DEFAULT_GRANT_TYPE=password
