      const response = await request(app.getHttpServer())
        .get('/<%= moduleName %>/<%= businessName %>/importTemplate')
        .set('Authorization', `Bearer ${authToken}`)
        .expect(200);

      expect(response.headers['content-type']).toContain('spreadsheetml');
    });
  });
<% } -%>
});
